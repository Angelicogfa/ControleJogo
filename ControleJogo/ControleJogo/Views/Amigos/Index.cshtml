@model IEnumerable<ControleJogo.Infra.DatabaseRead.OutputModel.AmigoDTO>

@{
    ViewBag.Title = "Amigos";
}

<h2>Amigos</h2>

@{
    if (Request.IsAuthenticated)
    {
        <p>
            @Html.ActionLink("Novo Amigo", "Create")
        </p>
    }
}

<table class="table table-striped table-hover" id="tableAmigos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complemento)
            </th>
            <th style="width:150px;">

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complemento)
                </td>
                <td style="width:150px;">
                    <a href="@Url.Action("Details", "Amigos", new { id = item.Id })" data-modal="" class="btn btn-default">
                        <span title="Editar" class="glyphicon glyphicon-info-sign"></span>
                    </a>
                    @{
                        if (Request.IsAuthenticated)
                        {
                            <a href="@Url.Action("Edit", "Amigos", new { id = item.Id })" data-modal="" class="btn btn-info">
                                <span title="Detalhes" class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Amigos", new { id = item.Id })" data-modal="" class="btn btn-danger">
                                <span title="Remover" class="glyphicon glyphicon-trash"></span>
                            </a>
                        }
                    }
                </td>
            </tr>
         }
    </tbody>

</table>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#tableAmigos').tablesorter();
        })
    </script>
}
